# Removendo o container flaskapp_1
docker container rm --force flaskapp_1
# flaskapp_1

# Listando redes existentes
docker network ls
# NETWORK ID     NAME      DRIVER    SCOPE
# 904b2c862949   bridge    bridge    local
# d085cf13d0d3   host      host      local
# e3d4c42a95ba   none      null      local

# Criando uma nova rede chamada nova_rede
docker network create --driver=bridge --subnet=200.100.0.0/16 nova_rede
# db28b8c5bbe952cd5a1659d36fb595b3630d826549648409a9a428289fa7b564

# Listando redes novamente
docker network ls
# NETWORK ID     NAME        DRIVER    SCOPE
# 904b2c862949   bridge      bridge    local
# d085cf13d0d3   host        host      local
# e3d4c42a95ba   none        null      local
# db28b8c5bbe9   nova_rede   bridge    local
